<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondodepantalla"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/boogie_worth_three"
        android:gravity="center"
        android:text="GUIA5-ZF16I04001"
        android:textStyle="bold"
        android:textColor="#FC2E01 "
        android:textSize="25dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="100dp">

    <Button
        android:id="@+id/btnConversation"
        android:layout_width="200dp"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton1"
        android:drawableLeft="@drawable/chat_conversation_22172"
        android:text="@string/conversacion" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton1"
        android:drawableLeft="@drawable/password_userpassword_9564"
        android:text="@string/login" />
    <Button
        android:id="@+id/btnCalculadora"
        android:layout_width="200dp"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton1"
        android:text="@string/calculadora"
        android:drawableLeft="@drawable/calculadora"/>


</LinearLayout>


</LinearLayout>